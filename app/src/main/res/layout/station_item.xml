<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:rowCount="2"
    android:columnCount="5">

    <ImageView
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:id="@+id/modeImageView"
        android:layout_column="0"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@+id/terminusName"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:padding="7dp" />

    <ImageView
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:id="@+id/lineImageView"
        android:layout_column="2"
        android:layout_row="0"
        android:layout_rowSpan="2"
        android:layout_alignBottom="@+id/terminusName"
        android:layout_toEndOf="@+id/modeImageView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/modeImageView"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:padding="7dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Station Name"
        android:id="@+id/stationName"
        android:layout_row="0"
        android:layout_column="3"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/lineImageView"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Terminus"
        android:id="@+id/terminusName"
        android:layout_row="1"
        android:layout_column="3"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/lineImageView"
        android:layout_below="@+id/stationName"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp" />

</RelativeLayout>